<h1 class="mb-4">Shop</h1>

<div class="mb-3">
  
  <form method="GET" action="/shop">
    <label for="categoryFilter" class="form-label">Filter by Category:</label>
    <select id="categoryFilter" name="category" class="form-select">
      <option value="">All Categories</option>
      {{#each categories}}
      <option value="{{id}}" {{#ifEquals ../selectedCategory id}}selected{{/ifEquals}}>{{category}}</option>
      {{/each}}
    </select>
    <button type="submit" class="btn btn-primary mt-2">Apply Filter</button>
  </form>
</div>

{{#if item}}
  
  <div class="row">
    <div class="col-md-6">
      <img src="{{item.featureImage}}" class="img-fluid" alt="{{item.title}}">
    </div>
    <div class="col-md-6">
      <h2>{{item.title}}</h2>
      <p>{{item.body}}</p>
      <p><strong>Price:</strong> ${{item.price}}</p>
      <p><strong>Category:</strong> 
        {{#each categories}}
          {{#ifEquals item.category id}}
            {{category}}
          {{/ifEquals}}
        {{/each}}
      </p>
      <p><small class="text-muted">{{item.postDate}}</small></p>
    </div>
  </div>
  <a href="/shop" class="btn btn-primary">Back to Shop</a>
{{else}}
  <p>{{message}}</p>
{{/if}}

{{#if items}}
  <h3>Other Items</h3>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each items}}
      <div class="col">
        <div class="card h-100">
          <img src="{{featureImage}}" class="card-img-top" alt="{{title}}">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{description}}</p>
            <p class="card-text"><strong>Price:</strong> ${{price}}</p>
            <a href="/shop/{{id}}" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No other items available.</p>
{{/if}}